
  {
    "compilerOptions": {
      "outDir": "./dist/",
      "baseUrl": "./src",
      "useDefineForClassFields": true,
      "esModuleInterop": false,
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "ESNext",
      "target": "ES2015",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true

    },
    "include": ["src"], 
    "types": ["web3", "ethers"],

  }
